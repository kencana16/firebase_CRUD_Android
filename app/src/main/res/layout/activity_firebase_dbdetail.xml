            android:layout_columnWeight="1"
            android:layout_column="2"
            android:layout_row="4"
            tools:text="@tools:sample/lorem"/>

        //baris 6
        <TextView
            android:layout_width="100dp"
            android:layout_columnWeight="1"
            android:text="Stok"
            android:layout_column="0"
