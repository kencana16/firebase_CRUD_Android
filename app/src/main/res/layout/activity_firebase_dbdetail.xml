            android:id="@+id/tv_satuan_detail"
            android:layout_columnWeight="1"
            android:layout_column="2"
            android:layout_row="2"
            tools:text="@tools:sample/lorem"/>

        //baris 4
        <TextView
            android:layout_width="100dp"
            android:layout_columnWeight="1"
            android:text="Harga Beli"
